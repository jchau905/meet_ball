<div class="container">
  <%= link_to chatroom_path(Chatroom.last), class: "navbar-brand" do %>
    <i class="fa-solid fa-comments chatroom-logo"></i>
  <% end %>
  <div class="d-flex">
    <% if @user.photo.attached?  %>
    <%= cl_image_tag @user.photo.key, class: "avatar-large" %>
    <% else %>
    <img class="avatar-large" src="https://res.cloudinary.com/meetball/image/upload/v1661796523/User_Avatar_whdhtq.jpg" alt="">
    <% end %>

    <div class="d-flex flex-column m-3">
      <h1><%= @user.username %><%= link_to edit_user_registration_path, class: "navbar-brand" do %>
        <i class="fa-solid fa-gear"></i></h1>
        <p>Rank: <%= render "shared/rank_images", rank: @user.find_enum_from_rank%></p>
        <p>Rankpoints: <%= @user.rank_points %></p>
      <% end %>
    </div>
  </div>

    <h2 class="mt-2">My Badges</h2>
    <% @user.badges.each do |badge| %>
    <%= cl_image_tag badge.photo.key, class: "avatar-badge" %>
    <% end %>
<br>

  <h2 class="mt-2">My Stats <i class="fa-solid fa-trophy"></i></h2>
  <div>
    <div class="stats">
    <h4>Total games played:</h4>
    <p>34</p>
    <h4>Win Percentage:</h4>
    <p>76%</p>
    <h4>Favorite Playground:</h4>
    <p>Toronto Raptors Arena</p>
    <h4 class="mt-2">Highest Rank:</h4>
    <img class="avatar" src="https://res.cloudinary.com/meetball/image/upload/v1661781884/User%20Ranks/Rank6.png" alt="">
    </div>
  </div>
  <br>
  <br>
</div>


<%= link_to "Log out", destroy_user_session_path, class: "dropdown-item text-center mt-1", data: {turbo_method: :delete} %>
