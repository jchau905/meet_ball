  <div class="form">
<%= simple_form_for([@playground, @game]) do |f| %>
    <%= f.input :playground,
      collection: Playground.all,
      placeholder: "Select a Playground",
      input_html: {
        data: {
          controller: "tom-select"
        }
      }
    %>
    <%= f.input :start_date
    # do %>
    #   <% f.text_field :start_date,
    #     data: {
    #     controller: "flatpickr",
    #     flatpickr_date_format: "Y-m-d",
    #     flatpickr_min_date: Time.zone.now
    #     }
    #   %>
    # <% end
    %>
    <%= f.input :team_size, as: :radio_buttons,
                data: {
              controller: "game-form"
            },
            collection_wrapper_tag: 'div',
            collection_wrapper_class: 'form-team-size',
            item_wrapper_class: 'category-item',
            input_html: {class: 'category-selector'},
            collection: Game.team_sizes
    %>
    <%= f.input :game_mode, as: :radio_buttons,
          collection_wrapper_tag: 'div',
          collection_wrapper_class: 'form-game-mode',
          item_wrapper_class: 'btn btn-blue btn-mode',
          input_html: {class: 'category-selector'},
          collection: Game.game_modes
    %>
    <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
  </div>
