<div class="playground-detail-image m-3" style="background-image: url('<%= cl_image_path @playground.photo.key if @playground.photo.attached? %>')" alt=""></div>
<div class="container">
  <div class="playground-details d-flex">
    <div>
      <h3><%= @playground.name %></h3>
      <p>📍 <%= @playground.address %></p>
      <p class="mb-3 small">📅 Opening hours</p>
      <p class="d-none"><%= @playground.description %></p>
    </div>
    <p class="small light-gray kms">3.4km away</p>
  </div>

  <h4 class="mt-4">Upcoming games</h4>
  <%= render "/shared/games" %>
</div>
