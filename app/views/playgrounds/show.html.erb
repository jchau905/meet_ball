<div class="container">
  <h1>Welcome at The<%=@playground.name %></h1>
  <p>📍 <%= @playground.address %></p>
  <p><%= @playground.description %></p>

  <% @playground.games.each do |game| %>
    <p><%= game.game_mode.zero? ? 'Competitve Game' : 'Casual Game' %></p>
    <p><%= "start at #{game.start_date} to #{game.end_date}" %></p>
  <% end %>

<%= link_to "All playgrounds", playgrounds_path %>
  <h4 class="mt-4">Upcoming games</h4>
  <%= render "/shared/games" %>
  
  <h2><%= link_to "back homepage", root_path %></h2>
</div>
